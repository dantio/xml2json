{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "test"
  ]
}
